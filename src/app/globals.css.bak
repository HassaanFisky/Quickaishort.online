@import "tailwindcss";
@import "tw-animate-css";

@custom-variant dark (&:is(.dark *));

@theme inline {
  --color-background: hsl(var(--background));
  --color-foreground: hsl(var(--foreground));
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
  --color-sidebar-ring: hsl(var(--sidebar-ring));
  --color-sidebar-border: hsl(var(--sidebar-border));
  --color-sidebar-accent-foreground: hsl(var(--sidebar-accent-foreground));
  --color-sidebar-accent: hsl(var(--sidebar-accent));
  --color-sidebar-primary-foreground: hsl(var(--sidebar-primary-foreground));
  --color-sidebar-primary: hsl(var(--sidebar-primary));
  --color-sidebar-foreground: hsl(var(--sidebar-foreground));
  --color-sidebar: hsl(var(--sidebar));
  --color-chart-5: hsl(var(--chart-5));
  --color-chart-4: hsl(var(--chart-4));
  --color-chart-3: hsl(var(--chart-3));
  --color-chart-2: hsl(var(--chart-2));
  --color-chart-1: hsl(var(--chart-1));
  --color-ring: hsl(var(--ring));
  --color-input: hsl(var(--input));
  --color-border: hsl(var(--border));
  --color-destructive: hsl(var(--destructive));
  --color-accent-foreground: hsl(var(--accent-foreground));
  --color-accent: hsl(var(--accent));
  --color-muted-foreground: hsl(var(--muted-foreground));
  --color-muted: hsl(var(--muted));
  --color-secondary-foreground: hsl(var(--secondary-foreground));
  --color-secondary: hsl(var(--secondary));
  --color-primary-foreground: hsl(var(--primary-foreground));
  --color-primary: hsl(var(--primary));
  --color-popover-foreground: hsl(var(--popover-foreground));
  --color-popover: hsl(var(--popover));
  --color-card-foreground: hsl(var(--card-foreground));
  --color-card: hsl(var(--card));
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
  --radius-2xl: calc(var(--radius) + 8px);
  --radius-3xl: calc(var(--radius) + 12px);
  --radius-4xl: calc(var(--radius) + 16px);
}

/* ============================================
   LIQUID GLASS + LUXURY TECH DESIGN SYSTEM
   2026 Premium Aesthetic
   ============================================ */

@layer base {
  :root {
    /* Carbon - Sophisticated Dark (Default) */
    --background: 228 18% 6%; /* Carbon Black - softer than OLED */
    --foreground: 0 0% 95%; /* Soft White - less harsh */

    --card: 228 18% 9%; /* Elevated surface */
    --card-foreground: 0 0% 95%;

    --popover: 228 18% 10%;
    --popover-foreground: 0 0% 95%;

    /* Electric Indigo - Singular Accent for CTAs */
    --primary: 251 68% 59%; /* Electric Indigo #5856D6 */
    --primary-foreground: 0 0% 100%;

    --secondary: 228 18% 14%; /* Elevated Graphite */
    --secondary-foreground: 0 0% 85%;

    --muted: 228 18% 12%;
    --muted-foreground: 228 10% 50%; /* Soft Graphite */

    --accent: 228 18% 16%;
    --accent-foreground: 0 0% 95%;

    --destructive: 0 72% 51%;
    --destructive-foreground: 0 0% 100%;

    --border: 228 18% 12%; /* Ghost borders - nearly invisible */
    --input: 228 18% 12%;
    --ring: 251 68% 59%; /* Indigo focus ring */

    --radius: 1.25rem; /* Generous roundness */

    --sidebar: 228 18% 5%;
    --sidebar-foreground: 0 0% 90%;
    --sidebar-primary: 251 68% 59%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 228 18% 12%;
    --sidebar-accent-foreground: 0 0% 90%;
    --sidebar-border: 228 18% 10%;
    --sidebar-ring: 251 68% 59%;
  }

  .dark {
    /* Aurora - Blue-tinted Dark (Alternative) */
    --background: 230 25% 7%;
    --foreground: 210 40% 98%;
    --card: 230 25% 10%;
    --card-foreground: 210 40% 98%;
    --popover: 230 25% 10%;
    --popover-foreground: 210 40% 98%;
    --primary: 220 100% 60%; /* Vivid Blue */
    --primary-foreground: 0 0% 100%;
    --secondary: 230 25% 16%;
    --secondary-foreground: 210 40% 90%;
    --muted: 230 25% 14%;
    --muted-foreground: 215 20% 55%;
    --accent: 230 25% 18%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62% 45%;
    --destructive-foreground: 0 0% 100%;
    --border: 230 25% 14%;
    --input: 230 25% 14%;
    --ring: 220 100% 60%;

    --sidebar: 230 25% 6%;
    --sidebar-foreground: 210 40% 98%;
    --sidebar-primary: 220 100% 60%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 230 25% 14%;
    --sidebar-accent-foreground: 210 40% 98%;
    --sidebar-border: 230 25% 16%;
    --sidebar-ring: 220 100% 60%;
  }

  .light {
    /* Porcelain - Premium Clean */
    --background: 0 0% 99%;
    --foreground: 228 18% 10%;
    --card: 0 0% 100%;
    --card-foreground: 228 18% 10%;
    --popover: 0 0% 100%;
    --popover-foreground: 228 18% 10%;
    --primary: 251 68% 52%; /* Deeper Indigo for light mode */
    --primary-foreground: 0 0% 100%;
    --secondary: 228 10% 96%;
    --secondary-foreground: 228 18% 20%;
    --muted: 228 10% 96%;
    --muted-foreground: 228 10% 45%;
    --accent: 228 10% 94%;
    --accent-foreground: 228 18% 10%;
    --destructive: 0 80% 55%;
    --destructive-foreground: 0 0% 100%;
    --border: 228 10% 92%;
    --input: 228 10% 92%;
    --ring: 251 68% 52%;

    --sidebar: 0 0% 98%;
    --sidebar-foreground: 228 18% 15%;
    --sidebar-primary: 251 68% 52%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 228 10% 95%;
    --sidebar-accent-foreground: 228 18% 15%;
    --sidebar-border: 228 10% 92%;
    --sidebar-ring: 251 68% 52%;
  }
}

/* ============================================
   UTILITY CLASSES - Premium Effects
   ============================================ */

@layer utilities {
  /* ------------------------------------------
     LIQUID GLASS V2 - High-blur, ghost-border
     ------------------------------------------ */
  .glass-panel {
    /* @apply bg-card/50 backdrop-blur-2xl border border-white/[0.04] shadow-xl shadow-black/5; */
  }

  @utility liquid-glass {
    background-color: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(40px) saturate(180%);
    -webkit-backdrop-filter: blur(40px) saturate(180%);
  }

  /* Legacy class - redirect to new system */
  @utility lightning-glass {
    background-color: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(40px) saturate(180%);
    -webkit-backdrop-filter: blur(40px) saturate(180%);
  }

  /* ------------------------------------------
     Z-AXIS ELEVATION - Neumorphic Depth
     ------------------------------------------ */
  .elevation-1 {
    box-shadow:
      0 1px 2px rgba(0, 0, 0, 0.08),
      0 2px 4px rgba(0, 0, 0, 0.06),
      inset 0 1px 0 rgba(255, 255, 255, 0.02);
  }

  .elevation-2 {
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.12),
      0 8px 16px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.03);
  }

  .elevation-3 {
    box-shadow:
      0 8px 16px rgba(0, 0, 0, 0.16),
      0 16px 32px rgba(0, 0, 0, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.04);
  }

  /* ------------------------------------------
     MICRO-INTERACTIONS - 400ms ease-in-out
     ------------------------------------------ */
  .interactive {
    @apply transition-all duration-[400ms] ease-in-out;
  }

  .interactive-scale {
    @apply interactive hover:scale-[1.02] active:scale-[0.98];
  }

  .interactive-lift {
    @apply interactive hover:-translate-y-0.5;
  }

  /* ------------------------------------------
     PREMIUM BUTTON - Refined press effect
     ------------------------------------------ */
  .btn-premium {
    @apply relative overflow-hidden interactive-scale;
    box-shadow:
      0 4px 12px rgba(88, 86, 214, 0.25),
      0 8px 24px rgba(88, 86, 214, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
  }

  .btn-premium:hover {
    box-shadow:
      0 6px 16px rgba(88, 86, 214, 0.35),
      0 12px 32px rgba(88, 86, 214, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .btn-premium::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.12),
      transparent 60%
    );
    pointer-events: none;
    border-radius: inherit;
  }

  /* ------------------------------------------
     GHOST BORDERS - Atmospheric panels
     ------------------------------------------ */
  .ghost-border {
    @apply border border-white/[0.03];
  }

  .ghost-border-visible {
    @apply border border-white/[0.08];
  }

  /* ------------------------------------------
     SHINE EFFECT - Subtle shimmer
     ------------------------------------------ */
  .shine-effect {
    position: relative;
    overflow: hidden;
  }

  .shine-effect::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 100%;
    background: linear-gradient(
      105deg,
      transparent 30%,
      rgba(255, 255, 255, 0.1) 40%,
      transparent 50%
    );
    transform: skewX(-20deg);
    animation: shine-sweep 4s infinite ease-in-out;
    pointer-events: none;
  }

  @keyframes shine-sweep {
    0%,
    100% {
      transform: translateX(-150%) skewX(-20deg);
    }
    50% {
      transform: translateX(150%) skewX(-20deg);
    }
  }

  /* ------------------------------------------
     GRADIENT TEXT - Hero headlines
     ------------------------------------------ */
  .gradient-text {
    @apply bg-clip-text text-transparent;
    background-image: linear-gradient(
      135deg,
      hsl(var(--primary)) 0%,
      hsl(251 68% 70%) 50%,
      hsl(220 100% 70%) 100%
    );
  }

  /* ------------------------------------------
     ATMOSPHERIC GLOW - Ambient lighting
     ------------------------------------------ */
  .ambient-glow {
    position: relative;
  }

  .ambient-glow::before {
    content: "";
    position: absolute;
    inset: -50%;
    background: radial-gradient(
      ellipse at 50% 0%,
      hsl(var(--primary) / 0.08) 0%,
      transparent 60%
    );
    pointer-events: none;
    z-index: -1;
  }
}

/* ============================================
   BASE STYLES
   ============================================ */

@layer base {
  * {
    @apply border-border outline-ring/50;
  }

  body {
    @apply bg-background text-foreground antialiased;
    font-feature-settings: "cv02", "cv03", "cv04", "cv11";
  }

  /* Refined focus states */
  :focus-visible {
    @apply outline-none ring-2 ring-primary/50 ring-offset-2 ring-offset-background;
    transition: box-shadow 400ms ease-in-out;
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Selection */
  ::selection {
    background: hsl(var(--primary) / 0.25);
    color: hsl(var(--foreground));
  }
}

/* ============================================
   SCROLLBAR - Minimal & Elegant
   ============================================ */

::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: hsl(var(--muted-foreground) / 0.2);
  border-radius: 100px;
}

::-webkit-scrollbar-thumb:hover {
  background: hsl(var(--muted-foreground) / 0.35);
}

/* Hide scrollbar but keep functionality */
.no-scrollbar::-webkit-scrollbar {
  display: none;
}

.no-scrollbar {
  -ms-overflow-style: none;
  scrollbar-width: none;
}
